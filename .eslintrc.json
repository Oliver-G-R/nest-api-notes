{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "space-before-function-paren": 0,
    "no-useless-constructor": "off",
    "no-use-before-define": 0,
    "quotes": 0,
    "new-cap": 0,
    "indent": 0
  }
}
